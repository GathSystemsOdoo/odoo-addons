<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Stock Config Settings -->
		<record id="eq_view_sale_quote_template_form_header" model="ir.ui.view">
		     <field name="name">eq.view.sale.quote.template.form.header</field>
		     <field name="model">sale.quote.template</field>
		     <field name="inherit_id" ref="website_quote.view_sale_quote_template_form"/>
		     <field name="arch" type="xml">
                <notebook position="before">
					<label for="eq_header_text" string="Header text"/>
					<group>
						<field name="eq_header_text" placeholder="Dear Sir or Madam," nolabel="1"/>
					</group>
				</notebook>

				 <xpath expr="//tree[@string='Sales Quote Template Lines']/field[@name='product_id']" position="before">
                    <field name="sequence" string="Pos"></field> <!--widget="handle"-->
                </xpath>

				  <xpath expr="//tree[@string='Sales Quote Template Lines']/field[@name='sequence']" position="attributes">
                    <attribute name="handle" />
                </xpath>


				 <xpath expr="//tree[@string='Sales Quote Template Lines']" position="attributes">
					<attribute name="editable"/>
				</xpath>

				 <xpath expr="//form[@string='Sales Quote Template Lines']/group/group/field[@name='product_id']" position="before">
                    <field name="sequence"></field>
                </xpath>

				 <xpath expr="//form[@string='Sales Quote Template Lines']/group/group/field[@name='product_id']" position="after">
                    <field name="sale_layout_cat_id"></field>
                </xpath>


				 <xpath expr="//form[@string='Sales Quote Template Lines']/group/group/div/field[@name='product_uom_qty']" position="after">
                    <field name="product_uom_id" groups="product.group_uom"></field>
                </xpath>

		     </field>
		</record>
        <!-- Stock Config Settings -->
		<record id="eq_view_sale_order_form_header" model="ir.ui.view">
		     <field name="name">eq.view.sale.order.form.header</field>
		     <field name="model">sale.order</field>
		     <field name="inherit_id" ref="website_quote.sale_order_form_quote"/>
		     <field name="arch" type="xml">
                <field name="template_id" position="replace">
                    <field name="template_id" on_change="onchange_template_id(template_id, partner_id, fiscal_position, order_line)"/>
				</field>
                <field name="partner_id" position="attributes">
                    <attribute name="on_change">onchange_partner_id(partner_id, template_id, context)</attribute>
				</field>
		     </field>
		</record>

    </data>
</openerp>
